---
const features = [
  "RAM Type",
  "CPU Allocation",
  "SSD Storage",
  "Ports",
  "Backups",
  "Databases",
  "DDoS Protection"
];
---

<div class="mt-16 overflow-x-auto">
  <table class="w-full text-left border-collapse">
    <thead>
      <tr class="border-b border-gray-700">
        <th class="py-4 px-6 text-gray-400">Feature</th>
        <th class="py-4 px-6 text-emerald-400">Basic</th>
        <th class="py-4 px-6 text-emerald-400">Popular</th>
        <th class="py-4 px-6 text-emerald-400">Premium</th>
      </tr>
    </thead>
    <tbody>
      {features.map(feature => (
        <tr class="border-b border-gray-700">
          <td class="py-4 px-6 text-gray-300">{feature}</td>
          <td class="py-4 px-6 text-white">✓</td>
          <td class="py-4 px-6 text-white">✓</td>
          <td class="py-4 px-6 text-white">✓</td>
        </tr>
      ))}
    </tbody>
  </table>
</div>