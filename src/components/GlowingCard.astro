---
interface Props {
  className?: string;
}

const { className = '' } = Astro.props;
---

<div class={`relative group ${className}`}>
  <div class="absolute -inset-0.5 bg-gradient-to-r from-emerald-500 to-emerald-600 rounded-lg blur opacity-30 group-hover:opacity-100 transition duration-1000 group-hover:duration-200"></div>
  <div class="relative">
    <slot />
  </div>
</div>